datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name  String?
  role   Role             @default(USER)
  userSetting   UserSetting? 
  issues Issues []
   @@map("users")  
}
enum Role {
  USER
  ADMIN
}

model Services{
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  title  String 
  description String  
 
}
 
model UserSetting {
    id             String    @id @default(auto()) @map("_id") @db.ObjectId
    notificationOn Boolean
    smsEnabled     Boolean
    user           User      @relation(fields: [userId], references: [id])
    userId         String    @unique @db.ObjectId
}
model Issues {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  phone       Int
  title       String
  description String
  userId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])
  @@index([userId])
 
}


model Branch {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    name  String
    description String
    Contacts Int
    sectors sector[]
    
}

model Connection {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  names String
  ID   Int
  UPI String
}

model province{
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   name String
   districts district []
}
model district {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   name String
   provinceId String @db.ObjectId
province  province @relation(fields: [provinceId], references: [id])
}
model sector {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   name String
   branchId String @db.ObjectId
 branch Branch @relation(fields: [branchId], references: [id])
}

model cell {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   name String
}


model village {
   id    String @id @default(auto()) @map("_id") @db.ObjectId
   name String
}