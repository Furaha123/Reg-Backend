datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name  String?
  role   Role             @default(USER)
  userSetting   UserSetting? 
  
  
}
enum Role {
  USER
  ADMIN
}

model Services{
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  title  String 
  description String  
 
}
 
model UserSetting {
    id             String    @id @default(auto()) @map("_id") @db.ObjectId
    notificationOn Boolean
    smsEnabled     Boolean
    user           User      @relation(fields: [userId], references: [id])
    userId         String    @unique @db.ObjectId
}
model Issues {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  phone Int
  title  String
  description  String
  location    String
  province String
  district String
  sector String

}



model Branch {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    name  String
    description String
    address  String
    location String
    Contacts Int
    
}